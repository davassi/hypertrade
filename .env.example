# Copy to `.env` and adjust as needed
APP_NAME=Hypertrade
ENVIRONMENT=local

# Required to start the app
HYPERTRADE_MASTER_ADDR=0xYourMasterAddress
HYPERTRADE_API_WALLET_PRIV=your-hyperliquid-sub-account-private-key-here
HYPERTRADE_SUBACCOUNT_ADDR=0xYourSubaccountAddress

# ══════════════════════════════════════════════════════════════
# WEBHOOK AUTHENTICATION (REQUIRED - Enable at least ONE method)
# ══════════════════════════════════════════════════════════════

# Method 1: Shared Secret Authentication (Recommended)
# If set, incoming webhooks must include general.secret matching this value
# HYPERTRADE_WEBHOOK_SECRET=your-strong-random-secret-here

# Method 2: IP Whitelist Authentication
# Enable to enforce allowed IPs only (TradingView webhook sources)
HYPERTRADE_IP_WHITELIST_ENABLED=false

# TradingView official webhook IPs (used when IP whitelist is enabled)
HYPERTRADE_TV_WEBHOOK_IPS=["52.89.214.238","34.212.75.30","54.218.53.128","52.32.178.7"]

# Trust X-Forwarded-For header (set true when behind a proxy/load balancer)
HYPERTRADE_TRUST_FORWARDED_FOR=true

# Logging
HYPERTRADE_LOG_LEVEL=INFO

# ══════════════════════════════════════════════════════════════
# ORDER EXECUTION SETTINGS
# ══════════════════════════════════════════════════════════════

# Market Order Execution Premium (basis points)
# Controls how aggressively orders cross the spread for immediate fills
# Lower = less slippage cost, but may fail to fill in volatile markets
# Higher = better fill rate, but higher execution cost
# Default: 40 bps (0.4%) - good balance for most liquid assets
# Recommended: 30-60 bps for BTC/ETH/SOL, 60-100 for less liquid altcoins
# Valid range: 1-500 bps
HYPERTRADE_MARKET_ORDER_PREMIUM_BPS=40
