# Copy to `.env` and adjust as needed
APP_NAME=Hypertrade
ENVIRONMENT=local

# Required to start the app
HYPERTRADE_MASTER_ADDR=0xYourMasterAddress
HYPERTRADE_API_WALLET_PRIV=your-private-key-here
HYPERTRADE_SUBACCOUNT_ADDR=0xYourSubaccountAddress

# IP whitelist for TradingView webhook
# Enable to enforce allowed IPs only
HYPERTRADE_IP_WHITELIST_ENABLED=false

# Trust X-Forwarded-For header (set true when behind a proxy/load balancer)
HYPERTRADE_TRUST_FORWARDED_FOR=true

# List can be JSON array or comma-separated string
HYPERTRADE_TV_WEBHOOK_IPS=["52.89.214.238","34.212.75.30","54.218.53.128","52.32.178.7"]

# Logging
HYPERTRADE_LOG_LEVEL=INFO

# Optional: Webhook shared secret (if set, incoming payloads must include general.secret matching this value)
HYPERTRADE_WEBHOOK_SECRET=
